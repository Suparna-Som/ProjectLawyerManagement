<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/headerText"
            android:layout_marginBottom="20dp"
            android:text="Account Info" />

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/nameImageView"
                style="@style/profileDetailsImage"
                android:src="@drawable/ic_name" />

            <TextView
                android:id="@+id/nameTextView"
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/nameImageView"
                android:text="Name" />

            <TextView
                android:id="@+id/layout_userdetails_name"

                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/nameImageView" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/mobileImageView"
                style="@style/profileDetailsImage"
                android:src="@drawable/ic_mobile" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/mobileImageView"
                android:text="Mobile" />

            <TextView

                android:id="@+id/layout_userdetails_phone"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/mobileImageView" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/emailImageView"
                style="@style/profileDetailsImage"
                android:src="@drawable/ic_email" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/emailImageView"
                android:text="Email" />

            <TextView
                android:id="@+id/layout_userdetails_email"

                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/emailImageView" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/addressImageView"
                style="@style/profileDetailsImage"
                android:src="@drawable/ic_address" />

            <TextView
                android:id="@+id/addtxt"
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/addressImageView"
                android:text="Address" />

            <TextView
                android:id="@+id/layout_userdetails_address"

                style="@style/profileDetailsMiniText"
                android:layout_below="@+id/addtxt"
                android:layout_toRightOf="@id/addressImageView" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/dobImageView"
                style="@style/profileDetailsImage"
                android:src="@drawable/ic_dob" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/dobImageView"
                android:text="D.O.B" />

            <TextView
                android:id="@+id/layout_userdetails_dob"

                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/dobImageView" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">

            <ImageView
                android:id="@+id/genderImageView"
                style="@style/profileDetailsImage"
                android:src="@drawable/ic_name" />

            <TextView
                style="@style/profileDetailsTextMain"
                android:layout_toRightOf="@id/genderImageView"
                android:text="Gender" />

            <TextView
                android:id="@+id/layout_userdetails_gender"

                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/genderImageView" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LinOther"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout style="@style/profileDetailsLayout">

                <ImageView
                    android:id="@+id/serviceImageView"
                    style="@style/profileDetailsImage"
                    android:src="@drawable/ic_mobile" />

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_toRightOf="@id/serviceImageView"
                    android:text="Service cities" />

                <TextView
                    android:id="@+id/layout_userdetails_service"

                    style="@style/profileDetailsMiniText"
                    android:layout_toRightOf="@id/serviceImageView" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />

            <RelativeLayout style="@style/profileDetailsLayout">

                <ImageView
                    android:id="@+id/courtsImageView"
                    style="@style/profileDetailsImage"
                    android:src="@drawable/ic_address" />

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_toRightOf="@id/courtsImageView"
                    android:text="Visiting Courts" />

                <TextView
                    android:id="@+id/layout_userdetails_courts"

                    style="@style/profileDetailsMiniText"
                    android:layout_toRightOf="@id/courtsImageView" />

            </RelativeLayout>



            <View style="@style/proifleDetailsView" />

            <RelativeLayout style="@style/profileDetailsLayout">

                <ImageView
                    android:id="@+id/expImageView"
                    style="@style/profileDetailsImage"
                    android:src="@drawable/ic_name" />

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_toRightOf="@id/expImageView"
                    android:text="Experience" />

                <TextView
                    android:id="@+id/layout_userdetails_exp"
                    style="@style/profileDetailsMiniText"
                    android:layout_toRightOf="@id/expImageView" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />

            <RelativeLayout style="@style/profileDetailsLayout">

                <ImageView
                    android:id="@+id/eduImageView"
                    style="@style/profileDetailsImage"
                    android:src="@drawable/ic_name" />

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_toRightOf="@id/eduImageView"
                    android:text="Education" />

                <TextView
                    android:id="@+id/layout_userdetails_edu"
                    style="@style/profileDetailsMiniText"
                    android:layout_toRightOf="@id/eduImageView" />

            </RelativeLayout>
            <View style="@style/proifleDetailsView" />

            <RelativeLayout style="@style/profileDetailsLayout">

                <ImageView
                    android:id="@+id/aboutImageView"
                    style="@style/profileDetailsImage"
                    android:src="@drawable/ic_name" />

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:layout_toRightOf="@id/aboutImageView"
                    android:text="About" />

                <TextView
                    android:id="@+id/layout_userdetails_about"

                    style="@style/profileDetailsMiniText"
                    android:layout_toRightOf="@id/aboutImageView" />

            </RelativeLayout>


            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout">

                <ImageView
                    style="@style/profileDetailsImage" />
                <TextView
                    style="@style/profileDetailsTextMain" />
                <TextView
                    style="@style/profileDetailsMiniText" />
            </RelativeLayout>
            <View style="@style/proifleDetailsView" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>