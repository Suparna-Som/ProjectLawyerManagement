<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#6B7DE1"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/nav_header_padding"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/nav_header_image"
        android:layout_width="@dimen/nav_header_icon_width"
        android:layout_height="@dimen/nav_header_icon_height"
        android:layout_gravity="center"
        android:src="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/nav_header_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Ratan Chaurasiya"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/white" />

</LinearLayout>